{
    "name": "ferdiebergado/bergadophp",
    "description": "A PHP Web Application Skeleton",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ferdinand Saporas Bergado",
            "email": "ferdiebergado@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "FSB\\": "src\\",
            "App\\": "app\\"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": [
            "php -S localhost:8000 -t public public/index.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "maximebf/debugbar": "^1.15",
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master"
    },
    "require": {
        "filp/whoops": "^2.3",
        "illuminate/database": "^5.7",
        "league/tactician": "^1.0",
        "league/tactician-container": "^2.0",
        "middlewares/aura-router": "^1.1",
        "middlewares/aura-session": "^1.1",
        "middlewares/negotiation": "^1.1",
        "middlewares/request-handler": "^1.4",
        "oscarotero/middleland": "^1.0",
        "php-di/php-di": "^6.0",
        "twig/twig": "^2.5",
        "vlucas/phpdotenv": "^2.5",
        "vlucas/valitron": "^1.4",
        "zendframework/zend-diactoros": "^2.0",
        "zendframework/zend-httphandlerrunner": "^1.0"
    }
}
